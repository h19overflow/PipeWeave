# PipeWeave Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://pipeweave:pipeweave_dev_password@localhost:5432/pipeweave_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://:pipeweave_redis_password@localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# S3 Storage Configuration
# ============================================================================
# For local development (LocalStack)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
S3_BUCKET=pipeweave-storage
S3_ENDPOINT_URL=http://localhost:4566

# For production (AWS S3)
# AWS_ACCESS_KEY_ID=your_actual_access_key
# AWS_SECRET_ACCESS_KEY=your_actual_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=pipeweave-production-storage
# S3_ENDPOINT_URL=  # Leave empty for real AWS

# ============================================================================
# Storage Thresholds
# ============================================================================
EDA_REPORT_SIZE_THRESHOLD_MB=1
MAX_DATASET_SIZE_MB=1024
MAX_MODEL_SIZE_MB=2048

# ============================================================================
# Google Gemini Configuration
# ============================================================================
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-3-flash-preview

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=PipeWeave
APP_VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# ============================================================================
# Security Settings
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS Settings
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# Celery Configuration
# ============================================================================
CELERY_BROKER_URL=redis://:pipeweave_redis_password@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:pipeweave_redis_password@localhost:6379/2
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=3600

# ============================================================================
# File Upload Settings
# ============================================================================
UPLOAD_CHUNK_SIZE=8388608  # 8MB chunks
PRESIGNED_URL_EXPIRY_SECONDS=300  # 5 minutes
